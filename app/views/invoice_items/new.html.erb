<h1>New Item</h1>

<%= form_with model: @invoice_item do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, in: 1.0..2000.0, step: 0.5  %>
  </div>
  <div>
    <%= form.label :quantity %><br>
    <%= form.number_field :qty, in: 1.0..2000.0, step: 1 %>
  </div>
  <div>
    <%= form.label :invoice_id %><br>
    <%= form.number_field :invoice_id %>
  </div>
  <div>
    <%= form.submit "Create item" %>
  </div>
<% end %>

